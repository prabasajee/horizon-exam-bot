# Horizon Exam Bot Configuration
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///horizon_exam_bot.db
# For PostgreSQL: postgresql://username:password@localhost/horizon_exam_bot
# For MySQL: mysql://username:password@localhost/horizon_exam_bot

# Application Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,txt

# AI/NLP Configuration
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Security Settings
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Analytics & Monitoring
ANALYTICS_ENABLED=True
GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
ENABLE_AI_GENERATION=True
ENABLE_REAL_TIME_ANALYTICS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SOCIAL_LOGIN=False

# Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_CONTENT_LENGTH=16777216

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost/horizon_exam_bot
# REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
DATA_FOLDER=data

# Security Settings (for production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# PERMANENT_SESSION_LIFETIME=3600
